<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="#b6abb5"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home">


    <TextView
        android:id="@+id/recitedTodayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/textColor1"
        android:text="@string/txt_total_recited" />

    <TextView
        android:id="@+id/id_total_durood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/textColor1"
        android:layout_marginTop="3dp"
        android:text="@string/txt_total_durood" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/id_total_point_erned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/textColor1"
        android:text="@string/txt_total_point_erned" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textColor1"
            android:text="@string/txt_timer" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/ic_timer_black_24dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_settings_backup_restore_black_24dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/colorPrimary"/>

        <EditText
            android:id="@+id/userName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="27dp"
            android:typeface="monospace"
            android:textColor="#39312f"
            android:cursorVisible="false"
            android:background="@color/white"
            android:text="250"
            android:textAlignment="center"
            android:clickable="false"
            android:inputType="number" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nightMode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_ac_unit_black_24dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/colorPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor1"
            android:text="Reset" />

        <TextView
            android:id="@+id/nightMode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="232dp"
            android:textColor="@color/textColor1"
            android:text="Night Mode" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:background="@drawable/button_press_background">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_press"
            android:layout_width="match_parent"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="175dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/button_selector"
/>
        <!--<ImageButton-->
            <!--android:id="@+id/imageButton1"-->
            <!--android:layout_width="175dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_height="175dp"-->
            <!--android:background="@null"-->
            <!--android:src="@drawable/circle_button_selector" />-->

    </LinearLayout>


</LinearLayout>