<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegistrationActivity"
    android:background="@drawable/background_1"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    tools:showIn="@layout/activity_registration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_registration"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="96dp"
        android:textSize="24sp"
        android:background="@drawable/custom_dialog_style"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="360dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/custom_dialog_style"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="300dp"
            android:background="@drawable/ic_edittextstyle"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp"
            android:textAlignment="center"
            android:textSize="27dp"
            android:hint="@string/txt_enter_contactnumber"
            android:typeface="monospace"
            android:textColor="#39312f"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="300dp"
            android:background="@drawable/ic_edittextstyle"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:textAlignment="center"
            android:textSize="27dp"
            android:hint="@string/txt_fullname"
            android:typeface="monospace"
            android:textColor="#39312f"
            android:ems="10"
            android:inputType="text" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:background="@drawable/ic_edittextstyle"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            android:textAlignment="center"
            android:textSize="27dp"
            android:hint="@string/txt_enter_pass"
            android:typeface="monospace"
            android:textColor="#39312f"
            android:ems="10"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="23dp">

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_gender"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:background="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/gender_button"
                android:layout_width="100dp"
                android:layout_marginLeft="90dp"
                android:textAlignment="center"
                android:layout_height="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reset_button_1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#7dcea0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Reset"/>

            <Button
                android:id="@+id/register"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="#c39bd3"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Register"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>