<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="86dp"
        android:paddingHorizontal="5dp"
        android:background="#ad4126"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/textView"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:paddingHorizontal="5dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:text="Login Page" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@drawable/login_background">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="User Name" />

        <EditText
            android:id="@+id/userName"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:background="@drawable/ic_edittextstyle"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="27dp"
            android:hint="Mobile Number Here..."
            android:typeface="monospace"
            android:textColor="#39312f"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Password" />


        <EditText
            android:id="@+id/password"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:background="@drawable/ic_edittextstyle"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#39312f"
            android:hint="Password Here..."
            android:typeface="monospace"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="200dp"
            android:autoLink="all"
            android:textColorLink="#576586"
            android:text="Forget Password \?" />

        <TextView
            android:id="@+id/noteyetregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:autoLink="all"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="109dp"
            android:text="Not Yet Register. Register here\?" />
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/txt_login"
        android:textSize="23dp"
        android:layout_marginLeft="4dp"
        android:background="#FFFFFF"
        />
</LinearLayout>